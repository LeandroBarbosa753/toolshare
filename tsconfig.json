{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "#controllers/*": ["app/Controllers/*"],
      "@ioc:/*": ["node_modules/@adonisjs/*/src"]
    },
    "moduleResolution": "node16",
    "module": "Node16",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "target": "ES6"
  }
}
